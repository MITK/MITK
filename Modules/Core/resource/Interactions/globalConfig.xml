<!--
Standard Configuration // Global Visibility!

Naming Convention:
      Std         MousePress    PrimaryButton   Ctrl

Global variant    Event class   Button/Key      Modifiers
-->

<config>
  <!-- Undeclared tags are filled with standard values -->
  <!-- Mouse Events -->
  <!-- MousePressEvents -->
  <event_variant class="MousePressEvent" name="StdMousePressPrimaryButton">
    <attribute name="EventButton" value="LeftMouseButton"/>
  </event_variant>
  <event_variant class="MousePressEvent" name="StdMousePressSecondaryButton">
    <attribute name="EventButton" value="RightMouseButton"/>
  </event_variant>
  <event_variant class="MousePressEvent" name="StdMousePressPrimaryButtonCtrl">
    <attribute name="EventButton" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>
  <event_variant class="MousePressEvent" name="StdMousePressSecondaryButtonCtrl">
    <attribute name="EventButton" value="RightMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>
  <!-- MouseMoveEvents -->
  <event_variant class="MouseMoveEvent" name="StdMouseMove"/>
  <event_variant class="MouseMoveEvent" name="StdMouseMovePrimaryButton">
    <attribute name="ButtonState" value="LeftMouseButton"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="StdMouseMoveCtrl">
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>
  <event_variant class="MouseMoveEvent" name="StdMouseMovePrimaryButtonCtrl">
    <attribute name="ButtonState" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>
  <!-- MouseReleaseEvents -->
  <event_variant class="MouseReleaseEvent" name="StdMouseReleasePrimaryButton">
    <attribute name="EventButton" value="LeftMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StdMouseReleaseSecondaryButton">
    <attribute name="EventButton" value="RightMouseButton"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StdMouseReleasePrimaryButtonCtrl">
    <attribute name="EventButton" value="LeftMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>
  <event_variant class="MouseReleaseEvent" name="StdMouseReleaseSecondaryButtonCtrl">
    <attribute name="EventButton" value="RightMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </event_variant>
   <!-- MouseWheelEvents -->
  <event_variant class="MouseWheelEvent" name="StdMouseWheelUp">
    <attribute name="ScrollDirection" value="up"/>
  </event_variant>
  <event_variant class="MouseWheelEvent" name="StdMouseWheelDown">
    <attribute name="ScrollDirection" value="down"/>
  </event_variant>
  <!-- Key Events -->
  <event_variant class="InteractionKeyEvent" name="StdA">
    <attribute name="Key" value="A"/>
  </event_variant>
  <event_variant class="InteractionKeyEvent" name="StdB">
    <attribute name="Key" value="B"/>
  </event_variant>
  <!-- ... -->
</config>
