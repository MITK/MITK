<?xml version="1.0" encoding="UTF-8"?>
<?BlueBerry version="0.1"?>
<plugin>

  <extension point="org.blueberry.ui.views">
    <view id="org.mitk.views.imagenavigator"
          name="Image Navigator"
          class="QmitkImageNavigatorView"
          icon="resources/Slider.png" />
  </extension>

  <extension point="org.blueberry.ui.commands">
    <command
      name="Image Navigator"
      description="Toggle the Image Navigator view"
      id="org.mitk.toggleImageNavigator"/>
  </extension>

  <extension point="org.blueberry.ui.menus">
    <menuContribution locationURI="menu:window?after=additions">
      <command
        commandId="org.mitk.toogleImageNavigator"
        label="Image Navigator"
        style="toggle"/>
    </menuContribution>
  </extension>

</plugin>
